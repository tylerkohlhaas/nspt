---
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'About Us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About Us"
    image={{
      src: '~/assets/images/about-hero.jpg',
      alt: 'North Shore Precision Teaching',
    }}
  >
    <Fragment slot="title">
      North Shore Precision Teaching
    </Fragment>

    <Fragment slot="subtitle">
      A place where learning is clear, progress is visible, and every success matters.
    </Fragment>
  </Hero>

  <!-- Steps2 Widget (Our Values) ****************** -->

  <Steps2
    title="Our Core Values"
    subtitle="We believe learning should be meaningful, measurable, and built on a strong foundation. These values guide how we teach, how we measure progress, and how we support each learner."
    items={[
      {
        title: 'Data-Driven Decisions',
        description:
          'We don’t leave progress up to chance. Every strategy is guided by clear data so we can see what’s working and make changes when needed.',
      },
      {
        title: 'Individualized Approach',
        description:
          'Every learner is different. We tailor each program to fit the unique needs and goals of the student—never a one-size-fits-all model.',
      },
      {
        title: 'Building Confidence',
        description:
          'Our aim is more than just skills—it’s independence. By building fluency and mastery, we give students the confidence to take on new challenges long after they leave our sessions.',
      },
    ]}
  />

  <!-- Features2 Widget (Connect) ************** -->

  <Features2
    title="Connect With Me"
    tagline="Contact"
    columns={2}
    items={[
      {
        title: 'Email',
        description:
          'Have a question? Reach out at contact@nspt.ca, and we\'ll respond as soon as we can.',
        icon: 'tabler:mail',
      },
      {
        title: 'Book a Consultation',
        description:
          'Ready to chat? Book your free, no-obligation 15-minute consultation directly in my calendar.',
        icon: 'tabler:calendar',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Book a Free 15-Minute Consultation',
        href: '/contact',
        icon: 'tabler:calendar',
      },
    ]}
  >
    <Fragment slot="title">
      Let’s Start the Conversation
    </Fragment>

    <Fragment slot="subtitle">
      Take the first step toward clarity and progress. Schedule your free consultation today and see how a data-driven approach can help your child thrive.
    </Fragment>
  </CallToAction>
</Layout>
