---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Start the Conversation" />

  <!-- ContactUs Widget ****************** -->

  <ContactUs
    id="form"
    title="Take the First Step"
    subtitle="The best way to get started is to book a free, 15-minute consultation. This allows us to discuss your child's specific needs and determine if our approach is the right fit. For general questions, feel free to use the form below."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Message',
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    description="I typically respond to inquiries within one business day."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="How to Connect"
    items={[
      {
        title: 'Book a Free Consultation',
        description: `The most effective way to get started. Schedule a 15-minute, no-obligation call directly in my calendar to discuss your family's needs.`,
        icon: 'tabler:calendar',
      },
      {
        title: 'Send an Email',
        description:
          'For general inquiries, you can reach me at contact@northshoreprecisionteaching.ca. I do my best to respond to all emails within 24 business hours.',
        icon: 'tabler:mail',
      },
      {
        title: 'Our Location',
        description: 'Serving families online across British Columbia and in-person on the North Shore.',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
